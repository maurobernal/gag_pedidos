@(Html.Kendo().DropDownList()
          .Name("color")
          .DataTextField("Text")
          .DataValueField("Value")
          .BindTo(new List<SelectListItem>() {
              new SelectListItem() {
                  Text = "Black",
                  Value = "1"
              },
              new SelectListItem() {
                  Text = "Orange",
                  Value = "2"
              },
              new SelectListItem() {
                  Text = "Grey",
                  Value = "3"
              }
          })
          .OptionLabel("Seleccione un Color")
          .Events( e => {
              e.Open("Open");
              e.Change("Change");
              e.DataBound("DataBound");
          })
          .HtmlAttributes(new { style = "width: 100%" })
    )


